{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../dist/api",
    "target": "es2018",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importsNotUsedAsValues": "error",
    "inlineSources": true,
    "pretty": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules"]
}
